# VARIABLES
variable temperature equal "300.0"
# VARIABLES END

# INIT
units      metal
dimension  3
boundary   p p m
atom_style atomic
read_data  norm.input.data

# POTENTIALS
pair_style tersoff/zbl
pair_coeff * * potentials/SiC.tersoff.zbl Si
neighbor   3.0 bin

# SET TEMPERATURE
velocity all create ${temperature} 4928459 dist gaussian

# THERMO STYLE
reset_timestep 0
timestep       0.001
thermo         20
thermo_style   custom step pe ke etotal press temp

# FIXES
fix f_2 all nvt temp ${temperature} ${temperature} $(100.0*dt)

# DUMPS
dump d_1 all custom 20 norm.dump id xs ys zs

# RUN
run	       5000
write_data norm.output.data
